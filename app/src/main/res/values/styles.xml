<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardView.NewsPost" parent="Widget.Material3.CardView.Outlined">
        <item name="boxStrokeWidth">3dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="strokeColor">@color/light_khaki</item>
        <item name="cardBackgroundColor">@color/light_khaki</item>
    </style>

    <style name="NewsPost.Text.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/falling_sky_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/light_beige</item>
    </style>

    <style name="NewsPost.Text.Description" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="News.NoResults.Text" parent="NewsPost.Text.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NewsPost.Details.Text.Title" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/falling_sky_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_beige</item>
    </style>

    <style name="NewsPost.Details.Text.Description." parent="NewsPost.Details.Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="NewsPost.Details.Text.Author." parent="NewsPost.Details.Text.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="NewsPost.Details.Text.Link" parent="NewsPost.Details.Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:color">#edede9</item>
        <item name="android:gravity">center</item>
    </style>

</resources>